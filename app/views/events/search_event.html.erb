<%
   @title = "Event Search"
   @title_link = search_event_events_path
%>

<%= bootstrap_form_tag url: search_event_events_path do |f| %>
  <div class="row">
   <div class="col-xs-1">Start: </div>
   <div class="col-xs-8">
    <%= f.date_select(:start_date, default: @start_date, hide_label: true, order: [:day, :month, :year] ) %>
   </div>
  </div>
  <div class="row">
   <div class="col-xs-1">End: </div>
   <div class="col-xs-5">
    <%= f.date_select(:end_date, default: @end_date, hide_label: true, order: [:day, :month, :year] ) %>
   </div>
   <div class="cos-xs-2"><%= f.submit "Search" %></div>
  </div>

  <br/>

  <div class="row">
   <div class="col-xs-10"><strong>Events: <%= @start_date.to_date.to_formatted_s(:long) %> to <%= @end_date.to_date.to_formatted_s(:long) %></strong></div>
   <div class="col-xs-2"><%= link_to "Download as PDF", search_event_events_path(format: :pdf) + '?start_date=' + @start_date.to_date.to_s + '&end_date=' + @end_date.to_date.to_s, { class: 'pull-right' } %></div>
  </div>

  <br />

  <% @events.each do |event| %>
    <% @event = event %>
    <%= render partial: 'helpers/event_details' if @event.present? %>
    <br />
    <br />
  <% end %>

<% end %>