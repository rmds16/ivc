<%
   @title = "Event Details"
   @title_link = event_path(@event)
%>

<div class="row">
 <div class="col-xs-2">Title:</div>
 <div class="col-xs-10"><%= @event.title %></div>
</div>
<div class="row">
 <div class="col-xs-2">Start: </div>
 <div class="col-xs-10"> <%= @event.start_date.to_formatted_s(:long) %></div>
</div>
<br/>
<div class="row">
 <div class="col-xs-2">Location:</div>
 <div class="col-xs-10"><%= simple_format(@event.where) %></div>
</div>
<br/>
<div class="row">
 <div class="col-xs-2">Post code: </div>
 <div class="col-xs-10"> <%= @event.post_map_ref %></div>
</div>
<br/>
<div class="row">
 <div class="col-xs-2">Description:</div>
 <div class="col-xs-10"><%= simple_format(@event.public_description) %></div>
</div>
<br/>
<div class="row">
  <div class="col-sm-12">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-12">Organiser:</div>
	  </div>
	  <div class="row">
        <div class="col-sm-12"><br /></div>
	  </div>
      <div class="row">
        <div class="col-xs-2">Name:</div>
        <div class="col-sm-10"><%= @event.organiser.full_name if @event.organiser %></div>
	  </div>
	  <div class="row">
	    <div class="col-xs-2">Email:</div>
	    <div class="col-sm-10"><%= @event.organiser_email %></div>
	  </div>
	  <div class="row">
	    <div class="col-xs-2">Phone:</div>
		<div class="col-sm-10"><%= @event.organiser_phone %></div>
	  </div>
	</div>
	<div class="col-sm-6">
	  <div class="row">
        <div class="col-sm-12">Second Organiser:</div>
	  </div>
      <div class="row">
        <div class="col-sm-12"><br /></div>
	  </div>
	  <div class="row">
        <div class="col-xs-2">Name:</div>
        <div class="col-sm-10"><%= @event.second_organiser.full_name if @event.second_organiser %></div>
	  </div>
	  <div class="row">
	    <div class="col-xs-2">Email:</div>
	    <div class="col-sm-10"><%= @event.second_organiser_email %></div>
	  </div>
	  <div class="row">
	    <div class="col-xs-2">Phone:</div>
		<div class="col-sm-10"><%= @event.second_organiser_phone %></div>
	  </div>
    </div>
  </div>
</div>
<br />
<div class="row">
 <div class="col-xs-2">Book by date: </div>
 <div class="col-xs-10"> <%= @event.book_by_date.to_formatted_s(:long) %></div>
</div>

<div class="col-xs-12">
<%= button_to "Signup", event_signup_path(@event), method: :get, class: 'pull-right' unless @event.attendees.include?(current_user) %>
<%= button_to "Leave", event_leave_path(@event), method: :get, class: 'pull-right' if @event.attendees.include?(current_user) %>
</div>

<hr />

<% if can? :edit, @event %>

<h3>Attendees</h3>
<br/>
<p>Count: <%= @event.attendees.count %></p>
<br/>
<% @event.attendees.each do |user| %>
<div class="row">
  <div class="col-sm-12"><%= user.full_name %></div>
</div>
<% end %>

<hr />

<% end %>

<div class="row col-sm-12" style="padding-left: 0px;">
 <div class="col-xs-2">
  <div class='col-xs-6'>
   <%= link_to "Edit", edit_event_path(@event), method: :get, class: 'pull-left' if can? :edit, @event %>
  </div>
  <div class="col-xs-6">
   <%= link_to "Delete", event_path(@event), method: "delete", class: 'pull-left', data: { confirm: "Remove #{@event.title}?" } if can? :destroy, @event %>
  </div>
 </div>
 <div class="col-xs-10">
   <%= link_to "Close", calendar_path, class: 'pull-right' %>
 </div>
</div>