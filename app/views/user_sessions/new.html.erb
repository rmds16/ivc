<%
   @title = "Login"
   @title_link = signin_path
%>

<%= bootstrap_form_for @user_session do |f| %>
<%= form_errors_for @user_session %>
<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-12"><%= f.text_field :email %></div>
    </div>
    <div class="row">
	  <div class="col-sm-12">
	    <%= f.label :password, "Password" %>
        <%= link_to "Forgot password", password_reset_path, class: "pull-right" %>
        <%= f.password_field :password, hide_label: true %>
      </div>
	</div>
	<div class="row">
	  <div class="col-sm-12"><%= f.label :remember_me, 'Remember me', class: 'checkbox inline' %><%= f.check_box :remember_me, label: '' %></div>
	</div>
	<div class="row">
      <div class="col-sm-12"><%= f.submit "Login" %></div>
    </div>
  </div>
</div>
<% end %>